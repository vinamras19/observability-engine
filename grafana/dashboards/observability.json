{
  "title": "Observability Engine",
  "uid": "obs-engine",
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Average by Host",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 16,
        "h": 8
      },
      "datasource": {
        "type": "influxdb",
        "uid": "influxdb"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 75
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"telemetry\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"server_metrics\")\n  |> filter(fn: (r) => r._field == \"avg\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean)"
        }
      ]
    },
    {
      "id": 2,
      "title": "Current Status",
      "type": "gauge",
      "gridPos": {
        "x": 16,
        "y": 0,
        "w": 8,
        "h": 8
      },
      "datasource": {
        "type": "influxdb",
        "uid": "influxdb"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 75
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"telemetry\")\n  |> range(start: -1m)\n  |> filter(fn: (r) => r._measurement == \"server_metrics\")\n  |> filter(fn: (r) => r._field == \"avg\")\n  |> last()"
        }
      ]
    },
    {
      "id": 3,
      "title": "Breach Count (Last 5m)",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "influxdb",
        "uid": "influxdb"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"telemetry\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"server_metrics\")\n  |> filter(fn: (r) => r.status == \"BREACH\")\n  |> count()"
        }
      ]
    },
    {
      "id": 4,
      "title": "Total Metrics Processed",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "influxdb",
        "uid": "influxdb"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"telemetry\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"server_metrics\")\n  |> filter(fn: (r) => r._field == \"count\")\n  |> sum()"
        }
      ]
    },
    {
      "id": 5,
      "title": "Min / Max Range",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "influxdb",
        "uid": "influxdb"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 5
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"telemetry\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"server_metrics\")\n  |> filter(fn: (r) => r._field == \"min\" or r._field == \"max\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean)"
        }
      ]
    },
    {
      "id": 6,
      "title": "Recent Data",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "influxdb",
        "uid": "influxdb"
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"telemetry\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"server_metrics\")\n  |> pivot(rowKey: [\"_time\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> sort(columns: [\"_time\"], desc: true)\n  |> limit(n: 20)"
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "avg"
            },
            "properties": [
              {
                "id": "unit",
                "value": "percent"
              },
              {
                "id": "decimals",
                "value": 1
              }
            ]
          }
        ]
      }
    }
  ],
  "schemaVersion": 38
}
